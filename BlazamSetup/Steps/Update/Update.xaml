<UserControl x:Class="BlazamSetup.Steps.Update.Update"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BlazamSetup.Steps.Update" xmlns:steps="clr-namespace:BlazamSetup.Steps"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" d:Background="White">
    <Grid>
        <steps:StepTitle Title="Updating"/>

        <StackPanel VerticalAlignment="Center" Margin="20,0,20,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Label Content="Current Step: "/>
                <Label x:Name="CurrentStepLabel"/>
            </StackPanel>
            <ProgressBar x:Name="RepairProgressBar" Height="10"/>
            <Label HorizontalAlignment="Center" x:Name="errorLabel"/>

        </StackPanel>
    </Grid>
</UserControl>
