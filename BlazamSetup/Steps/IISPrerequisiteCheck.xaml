<UserControl x:Class="BlazamSetup.Steps.IISPrerequisiteCheck"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BlazamSetup.Steps"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" d:Background="White">
    <Grid>
        <local:StepTitle Title="IIS Pre-Requisites"/>

        <CheckBox x:Name="frameworkCheckbox" IsEnabled="false" Content="ASP .NET 8 Core Web Hosting Bundle" Margin="10,40,0,0"/>
        <Label Content="ASP NET Core apps running under IIS require both the 32-bit and 64-bit Hosting Bundles" Margin="10,50,0,0" FontSize="11"/>
        <Button VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,0,0,20" Content="Download Prerequisites" Click="Button_Click"  />
    </Grid>
</UserControl>
