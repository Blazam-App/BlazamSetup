<UserControl x:Class="BlazamSetup.Steps.InsallationProgressDisplay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BlazamSetup.Steps"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="800" d:Background="White">
    <Grid>
        <StackPanel VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Label Content="Current Step: "/>
                <Label x:Name="CurrentStepLabel"/>
            </StackPanel>
            <ProgressBar x:Name="InstallProgressBar" Height="10"/>
        </StackPanel>
        
    </Grid>
</UserControl>
