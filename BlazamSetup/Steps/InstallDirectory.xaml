<UserControl x:Class="BlazamSetup.Steps.InstallDirectory"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BlazamSetup.Steps"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" d:Background="White">
    <Grid>
        <local:StepTitle Title="Installation Directory"/>

        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Content="Blazam will be installed to the following directory..."/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">

                <TextBox x:Name="directoryTextBox" TextWrapping="Wrap" Text="TextBox" Width="315" VerticalAlignment="Center"/>
            <Button Content="Browse" Click="Button_Click"/>
            </StackPanel>

        </StackPanel>
    </Grid>
</UserControl>
