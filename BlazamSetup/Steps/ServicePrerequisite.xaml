<UserControl x:Class="BlazamSetup.Steps.ServicePrerequisite"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BlazamSetup.Steps"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" d:Background="White">
    <Grid>
        <local:StepTitle Title="Service Pre-Requisites"/>

        <CheckBox x:Name="frameworkCheckbox" IsEnabled="false" Content="ASP .NET 8 Core Runtime" Margin="10,40,0,0"/>

        <StackPanel Orientation="Horizontal"  VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,0,0,20">
            <Button  VerticalAlignment="Bottom" HorizontalAlignment="Center" Content="Download Prerequisites" Click="Button_Click"  />
            <Button VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="10,0,0,0" Content="Recheck" Click="Recheck_Click"  />
        </StackPanel>
    </Grid>
</UserControl>
