<UserControl x:Class="BlazamSetup.Steps.Uninstall.UninstallResults"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BlazamSetup.Steps.Uninstall"
      xmlns:steps="clr-namespace:BlazamSetup.Steps"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
        <steps:StepTitle Title="Uninstall Finished"/>

        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20">
            <TextBlock TextWrapping="Wrap" TextAlignment="Center">
                The uninstallation process has completed. 
                <LineBreak/>
                <LineBreak/>
                Your application data, including any database or SQLite file, has not been removed from your system.
            </TextBlock>
        </StackPanel>
    </Grid>
</UserControl>
