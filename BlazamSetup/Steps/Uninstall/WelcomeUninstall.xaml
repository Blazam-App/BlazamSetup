<UserControl x:Class="BlazamSetup.Steps.Uninstall.WelcomeUninstall"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BlazamSetup.Steps.Uninstall" xmlns:steps="clr-namespace:BlazamSetup.Steps"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" d:Background="White">
    <Grid>
        <steps:StepTitle Title="Uninstall Blazam"/>
        <StackPanel x:Name="textStackPanel" HorizontalAlignment="Left" Margin="32,52,0,0" VerticalAlignment="Top">
            <Label Content="You are about to uninstall Blazam."  />
            <Label Content="It will be completely removed from your system." />
            <Label Content="The data in the database will not be removed."/>

        </StackPanel>
         </Grid>
</UserControl>
