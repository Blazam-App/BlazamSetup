<UserControl x:Class="BlazamSetup.Steps.ConfigureIdentity"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BlazamSetup.Steps"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" d:Background="White">
    <Grid>
        <local:StepTitle Title="Application Identity"/>
        <StackPanel Orientation="Horizontal" Height="20" HorizontalAlignment="Center">
            <TextBox IsReadOnly="True" x:Name="accountTextBox" Width="350" />
            <Button Content="Choose User" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</UserControl>
