<UserControl x:Class="BlazamSetup.Steps.PostInstallation"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BlazamSetup.Steps"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" d:Background="White">
    <Grid>
        <local:StepTitle Title="Installation Finished"/>
        <StackPanel Margin="10,40,0,0" VerticalAlignment="Center">

            <CheckBox x:Name="startCheckBox" Content="Start Blazam now" IsChecked="True"/>
        </StackPanel>
    </Grid>
</UserControl>
