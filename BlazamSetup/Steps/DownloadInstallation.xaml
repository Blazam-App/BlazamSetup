<UserControl x:Class="BlazamSetup.Steps.DownloadInstallation"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BlazamSetup.Steps"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" d:Background="White">
    <Grid>
        <local:StepTitle Title="Downloading"/>

        <ProgressBar x:Name="DownloadProgressBar" Height="10" Margin="50,20,50,0" HorizontalAlignment="Stretch"/>
        <Label x:Name="DownloadingNote" Content="Please wait while the installer downloads the latest version of Blazam..." HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="0,0,0,20" />
        <Label x:Name="FinishedNote" Content="Download complete. Click Next to proceed." Margin="0,0,0,20" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Visibility="Hidden" />
    </Grid>
</UserControl>
