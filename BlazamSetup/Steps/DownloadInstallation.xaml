<UserControl x:Class="BlazamSetup.Steps.DownloadInstallation"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BlazamSetup.Steps"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" d:Background="White">
    <Grid>
        <ProgressBar x:Name="DownloadProgressBar" HorizontalAlignment="Center" Height="10" Margin="0,244,0,0" VerticalAlignment="Top" Width="556"/>
        <Label x:Name="DownloadingNote" Content="Please wait while the installer downloads the latest version of Blazam..." HorizontalAlignment="Center" Margin="0,199,0,0" VerticalAlignment="Top" />
    </Grid>
</UserControl>
