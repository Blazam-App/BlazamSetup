<UserControl x:Class="BlazamSetup.Steps.InstallationType"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BlazamSetup.Steps"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" d:Background="White">
    <Grid>
        <local:StepTitle Title="Installation Type"/>

        <RadioButton x:Name="iisInstall" GroupName="InstallType" Content="IIS Installation" HorizontalAlignment="Left" Margin="10,52,0,0" VerticalAlignment="Top" Checked="iisInstall_Checked"/>
        <RadioButton x:Name="serviceInstall" GroupName="InstallType" Content="Service Installation" HorizontalAlignment="Left" Margin="10,79,0,0" VerticalAlignment="Top" Checked="serviceInstall_Checked"/>

    </Grid>
</UserControl>
