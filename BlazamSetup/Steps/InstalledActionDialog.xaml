<UserControl x:Class="BlazamSetup.Steps.InstalledActionDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BlazamSetup.Steps"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" d:Background="White">
    <Grid>
        <local:StepTitle Title="Choose an option"/>
        <StackPanel Margin="10,60,0,0">
            <Label>A Blazam installaion was found on this machine.</Label>
            <Label  Margin="0,0,0,20">Please choose from the following opions.</Label>
            
            <RadioButton x:Name="Update" IsChecked="true" GroupName="InsalledAction" Content="Update" Checked="Update_Checked"/>
            <RadioButton x:Name="Repair"  GroupName="InsalledAction" Content="Repair" Checked="Repair_Checked"/>
            <RadioButton x:Name="Remove" GroupName="InsalledAction" Content="Remove" Checked="Remove_Checked"/>
        </StackPanel>
    </Grid>
</UserControl>
